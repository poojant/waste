<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fullLayout"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/whitebutton"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/wholeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="end">

                    <ImageView
                        android:id="@+id/volunteerImage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile_pic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name : "
                            android:textSize="14sp"
                            android:textColor="@color/text_color"/>

                        <TextView
                            android:id="@+id/volunteerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volunteer Name" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email ID : "
                            android:textColor="@color/text_color"/>

                        <TextView
                            android:id="@+id/volunteerEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volunteer Email ID" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile No. : "
                            android:textColor="@color/text_color"/>

                        <TextView
                            android:id="@+id/volunteerMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volunteer Contact" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/accept"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_check_black_24dp"/>
                    <ImageView
                        android:id="@+id/reject"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_close_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a3d1ed"
                />
            <TextView
                android:id="@+id/tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to view aadhar card"
                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/volunteerAadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_pic"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>